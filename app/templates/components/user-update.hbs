{{#if updateUserForm}}
    <div>
      <form>
        <div class="form-group">
          <label for="admin">Admin</label>
          {{input value=admin id="admin" placeholder=trash.admin}}
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          {{input value=password id="password" placeholder=trash.password.name}}
        </div>

        <button {{action 'update' user}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateUserForm'}}>Admin Login</button>
{{/if}}
